import java.util.ArrayList;
import java.util.Scanner;

public class SumIntegersAutoUnbox {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>();

        System.out.print("Enter number of integers: ");
        int n = Integer.parseInt(sc.nextLine()); // Parse string input

        // Input integers as strings and convert to Integer
        for (int i = 0; i < n; i++) {
            System.out.print("Enter integer #" + (i + 1) + ": ");
            String input = sc.nextLine();
            Integer num = Integer.parseInt(input); // String to Integer (autoboxing happens here)
            numbers.add(num); // Autoboxing from int to Integer
        }

        // Calculate sum using unboxing
        int sum = 0;
        for (Integer num : numbers) {
            sum += num; // Unboxing from Integer to int
        }

        System.out.println("The sum of the integers is: " + sum);
        sc.close();
    }
}
